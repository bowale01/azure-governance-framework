{
  "mode": "Indexed",
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Storage/storageAccounts"
        },
        {
          "anyOf": [
            {
              "field": "Microsoft.Storage/storageAccounts/encryption.keySource",
              "notEquals": "Microsoft.Keyvault"
            },
            {
              "field": "Microsoft.Storage/storageAccounts/supportsHttpsTrafficOnly",
              "notEquals": true
            },
            {
              "field": "Microsoft.Storage/storageAccounts/minimumTlsVersion",
              "notEquals": "TLS1_2"
            },
            {
              "field": "Microsoft.Storage/storageAccounts/allowBlobPublicAccess",
              "notEquals": false
            },
            {
              "field": "location",
              "notIn": [
                "West Europe",
                "North Europe",
                "France Central",
                "Germany West Central",
                "Switzerland North",
                "Switzerland West",
                "Norway East",
                "Norway West"
              ]
            }
          ]
        }
      ]
    },
    "then": {
      "effect": "[parameters('effect')]",
      "details": {
        "type": "Microsoft.Storage/storageAccounts",
        "evaluationDelay": "AfterProvisioning",
        "roleDefinitionIds": [
          "/providers/Microsoft.Authorization/roleDefinitions/17d1049b-9a84-46fb-8f53-869881c3d3ab"
        ],
        "deployment": {
          "properties": {
            "mode": "incremental",
            "template": {
              "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
              "contentVersion": "1.0.0.0",
              "parameters": {
                "storageAccountName": {
                  "type": "string"
                },
                "location": {
                  "type": "string"
                },
                "keyVaultUri": {
                  "type": "string"
                }
              },
              "resources": [
                {
                  "type": "Microsoft.Storage/storageAccounts",
                  "apiVersion": "2022-09-01",
                  "name": "[parameters('storageAccountName')]",
                  "location": "[parameters('location')]",
                  "properties": {
                    "supportsHttpsTrafficOnly": true,
                    "minimumTlsVersion": "TLS1_2",
                    "allowBlobPublicAccess": false,
                    "allowSharedKeyAccess": false,
                    "allowCrossTenantReplication": false,
                    "encryption": {
                      "services": {
                        "blob": {
                          "enabled": true,
                          "keyType": "Customer"
                        },
                        "file": {
                          "enabled": true,
                          "keyType": "Customer"
                        }
                      },
                      "keySource": "Microsoft.Keyvault",
                      "keyvaultproperties": {
                        "keyname": "storage-encryption-key",
                        "keyvaulturi": "[parameters('keyVaultUri')]"
                      }
                    },
                    "networkAcls": {
                      "bypass": "AzureServices",
                      "defaultAction": "Deny"
                    }
                  },
                  "tags": {
                    "GDPRCompliant": "true",
                    "DataResidency": "EU",
                    "EncryptionStandard": "CustomerManagedKeys",
                    "ComplianceFramework": "GDPR-Article32"
                  }
                }
              ]
            },
            "parameters": {
              "storageAccountName": {
                "value": "[field('name')]"
              },
              "location": {
                "value": "[field('location')]"
              },
              "keyVaultUri": {
                "value": "[parameters('keyVaultUri')]"
              }
            }
          }
        }
      }
    }
  },
  "parameters": {
    "effect": {
      "type": "String",
      "metadata": {
        "displayName": "Effect",
        "description": "Enable or disable the execution of the policy"
      },
      "allowedValues": [
        "DeployIfNotExists",
        "AuditIfNotExists",
        "Disabled"
      ],
      "defaultValue": "DeployIfNotExists"
    },
    "keyVaultUri": {
      "type": "String",
      "metadata": {
        "displayName": "Key Vault URI",
        "description": "URI of the Key Vault containing customer-managed encryption keys"
      }
    }
  },
  "metadata": {
    "displayName": "GDPR - Enforce Storage Account Compliance",
    "description": "Ensures storage accounts comply with GDPR requirements including data residency in EU regions, customer-managed encryption, HTTPS-only traffic, and no public blob access.",
    "category": "Data Protection",
    "version": "1.0.0",
    "compliance": {
      "gdpr": {
        "articles": [
          "Article 32 - Security of processing",
          "Article 44 - General principle for transfers",
          "Article 45 - Transfers on the basis of an adequacy decision"
        ],
        "requirements": [
          "Data must be processed in EU regions",
          "Encryption at rest with customer-managed keys",
          "Secure data transmission (HTTPS only)",
          "No unauthorized public access to personal data"
        ]
      },
      "iso27001": {
        "controls": [
          "A.10.1.1 - Cryptographic policy",
          "A.13.2.1 - Information transfer policies and procedures",
          "A.18.1.4 - Privacy and protection of personally identifiable information"
        ]
      },
      "soc2": {
        "criteria": [
          "CC6.1 - Logical and physical access controls",
          "CC6.7 - Data transmission controls"
        ]
      }
    },
    "examples": [
      {
        "scenario": "Storage account in non-EU region",
        "action": "Policy will prevent deployment or flag for remediation"
      },
      {
        "scenario": "Storage account without customer-managed encryption",
        "action": "Policy will deploy customer-managed encryption configuration"
      },
      {
        "scenario": "Storage account allowing HTTP traffic",
        "action": "Policy will enforce HTTPS-only configuration"
      }
    ]
  }
}
